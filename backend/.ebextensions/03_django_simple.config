# Simplified configuration for reliable deployment

container_commands:
  01_collectstatic:
    command: "source /var/app/venv/*/bin/activate && python manage.py collectstatic --noinput || echo 'Collectstatic failed but continuing'"
    leader_only: true
    ignoreErrors: true
  02_migrate:
    command: "source /var/app/venv/*/bin/activate && python manage.py migrate --noinput || echo 'Migrate failed but continuing'"
    leader_only: true
    ignoreErrors: true

option_settings:
  aws:elasticbeanstalk:application:environment:
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
    PYTHONUNBUFFERED: "1"
